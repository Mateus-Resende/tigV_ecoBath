<% provide(:title, @user.first_name) %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.first_name %>
</h1>
<h2>
  <%= @user.last_name %>, <%= @user.first_name %>
</h2>
<h3>
  <strong>Email:</strong>
  <%= @user.email %>
</h3>

<h3>
  <strong>Data de nascimento:</strong>
  <%= @user.birthdate %>
</h3>

<h3>
  <strong>Sexo:</strong>
  <%= @user.gender %>
</h3>

<h4>
  <%= link_to 'Edit', edit_user_path(@user) %> | <%= link_to 'Back', users_path %>
</h4>
