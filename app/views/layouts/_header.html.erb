<head>
  <title>EcoBath - Seu gerenciador de gastos de &aacute;gua</title>
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <meta name="version" content="<%= VERSION %>">
  <link href='https://fonts.googleapis.com/css?family=Magra|Open+Sans:400,700' rel='stylesheet' type='text/css' media="all">
  <link href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css' rel='stylesheet' type='text/css' media="all">

  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico', type: 'image/png' %>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic" %>

<script type="text/javascript">
$(document).delegate('*[data-toggle="lightbox"]', 'click', function(event) { event.preventDefault(); $(this).ekkoLightbox(); });
</script>
<script>
  new WOW().init();
</script>

</head>


<div id="menu">
  <nav class="navbar-wrapper navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-backyard">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <a class="navbar-brand site-name" href="#top"><%= link_to image_tag("logo2.png", :alt => "Logo", style: "width: 170px; height: 87px;"), root_path, class: "brand", :id => "logo" %></a>
      </div>
      <% if logged_in? %>
        <div id="navbar-scroll" class="collapse navbar-collapse navbar-backyard navbar-right text-center">
          <ul class="nav navbar-nav" style="margin: 7.5px -15px; font-size: 1.2em;">
            <li><%= link_to "Perfil", user_path(@current_user.id) %></li>
            <li><%= link_to "Histórico", user_baths_path(@current_user.id) %></li>
            <li><%= link_to "Estatísticas", user_stats_path(@current_user.id) %></li>
            <li class="divider"></li>
            <li><%= link_to "Sair", logout_path, method: "post" %></li>
          </ul>
        </div>
      <% else %>
        <div id="login" class="navbar-backyard navbar-right">
            <ul class="nav navbar-nav" style="margin: 7.5px -15px; font-size: 1.2em;">
              <li><%= link_to 'Login', login_path %></li>
              <li><%= link_to 'Cadastro', new_user_path %></li>
            </ul>
        </div>
      <% end %>
    </div>
  </nav>
</div>
